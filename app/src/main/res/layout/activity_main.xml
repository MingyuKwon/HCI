<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Panel1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="-15dp"
        android:layout_marginRight="-15dp"
        android:layout_marginBottom="-80dp"
        android:background="@drawable/text_outline"
        android:text="\n\n\n\n\n\n\n\n\n\n\n"
        android:textAlignment="center"

        android:textSize="15dp"

        app:layout_constraintBottom_toTopOf="@+id/DestinationShowButton"
        app:layout_constraintEnd_toEndOf="@+id/DestinationShowButton"
        app:layout_constraintHorizontal_bias="0.517"
        app:layout_constraintStart_toStartOf="@+id/DestinationShowButton" />

    <Spinner
        android:id="@+id/FavoriteSpinner"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="80dp"
        android:background="@drawable/favorites_outline"
        app:layout_constraintBottom_toTopOf="@+id/DestinationShowButton"
        app:layout_constraintEnd_toEndOf="@+id/DestinationShowButton"

        app:layout_constraintStart_toStartOf="@+id/DestinationShowButton" />



    <Button
        android:id="@+id/FavoriteAddButton"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="즐겨 찾기 추가"
        android:textSize="13dp"
        android:background="@drawable/favoritebutton"

        app:layout_constraintBottom_toTopOf="@+id/DestinationShowButton"
        app:layout_constraintStart_toStartOf="@+id/DestinationShowButton" />

    <Button
        android:id="@+id/FavoriteDeleteButton"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:text="즐겨 찾기 삭제"
        android:textSize="13dp"
        android:layout_marginLeft="30dp"
        android:background="@drawable/favoritedeletebutton"
        app:layout_constraintBottom_toBottomOf="@+id/FavoriteAddButton"
        app:layout_constraintStart_toEndOf="@+id/FavoriteAddButton" />

    <Button
        android:id="@+id/ShowSettingButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="알림 방법 설정하기"
        android:layout_marginTop="280dp"
        app:layout_constraintEnd_toEndOf="@+id/DestinationShowButton"
        app:layout_constraintStart_toStartOf="@+id/DestinationShowButton"
        app:layout_constraintTop_toBottomOf="@+id/DestinationShowButton"
        android:background="@drawable/defaultbutton"

        />

    <TextView
        android:id="@+id/DestinationShowButton"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="360dp"
        android:background="@drawable/text_outline"

        android:text="목적지를 입력해 주세요"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="주먹구구 대중교통"
        app:layout_constraintBottom_toTopOf="@+id/FavoriteSpinner"
        app:layout_constraintEnd_toEndOf="@+id/DestinationShowButton"
        app:layout_constraintStart_toStartOf="@+id/DestinationShowButton"
        android:textSize="35dp"
        android:textColor="@color/black"
        android:layout_marginBottom="120dp"
        android:textStyle="bold"

        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="알람 시작"
        android:textColor="@color/black"
        android:textSize="15dp"
        android:textStyle="bold"

        app:layout_constraintEnd_toEndOf="@+id/AlarmStartButton"
        app:layout_constraintStart_toStartOf="@+id/AlarmStartButton"
        app:layout_constraintTop_toBottomOf="@+id/AlarmStartButton" />

    <ImageButton
        android:id="@+id/AlarmStartButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/ShowSettingButton"
        app:layout_constraintEnd_toEndOf="@+id/DestinationShowButton"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="@+id/DestinationShowButton"
        app:layout_constraintTop_toBottomOf="@+id/DestinationShowButton"
        app:layout_constraintVertical_bias="0.496"
        app:srcCompat="@drawable/twotone_alarm_on_24" />


</androidx.constraintlayout.widget.ConstraintLayout>