<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 눌린 상태 (pressed) -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#918e8e" /> <!-- 배경색 -->
            <stroke android:width="3dp" android:color="#000000" /> <!-- 테두리 -->
            <corners android:radius="20dp" /> <!-- 모서리 반경 -->
        </shape>
    </item>

    <!-- 기본 상태 (default) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#bfbbbb" /> <!-- 배경색 -->
            <stroke android:width="3dp" android:color="#000000" /> <!-- 테두리 -->
            <corners android:radius="20dp" /> <!-- 모서리 반경 -->
        </shape>
    </item>
</selector>