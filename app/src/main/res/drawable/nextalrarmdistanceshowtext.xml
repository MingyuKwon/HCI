<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 내부 색상 설정 -->
    <solid android:color="#ffffff" /> <!-- 배경색, 필요에 따라 변경 -->

    <!-- 테두리 설정 -->
    <stroke
        android:width="2dp"
        android:color="#4c79f5" /> <!-- 테두리 색상, 필요에 따라 변경 -->

    <!-- 모서리 반경 설정 -->
    <corners android:radius="15dp" /> <!-- 모서리를 둥글게 하고 싶을 경우 -->

    <!-- 패딩 설정 (선택 사항) -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
